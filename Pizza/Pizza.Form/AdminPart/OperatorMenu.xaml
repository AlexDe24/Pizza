<Window x:Class="Pizza.Form.OperatorMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza.Form"
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Окно Оператора" Height="300" Width="600">
    <Grid>
        <ListView Name="OrdersList">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Path=id}"></GridViewColumn>
                        <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Path=fullPrice}"></GridViewColumn>
                        <GridViewColumn Header="Клиент" DisplayMemberBinding="{Binding Path=client}"></GridViewColumn>
                        <GridViewColumn Header="Дата заказа" DisplayMemberBinding="{Binding Path=date}"></GridViewColumn>
                        <GridViewColumn Header="Состояние заказа" DisplayMemberBinding="{Binding Path=condition}"></GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
