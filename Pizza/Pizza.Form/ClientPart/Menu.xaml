<Window x:Class="Pizza.Form.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza.Form"
        mc:Ignorable="d"
        Title="Hot Miami - Меню" Height="300" Width="580" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Menu>
            <Menu.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFC3A0"/>
                    <GradientStop Color="#FFFFE16E" Offset="1"/>
                </LinearGradientBrush>
            </Menu.Background>
            
            <MenuItem Header="Аккаунт">
                <MenuItem Header="Профиль" Click="MenuItem_Click"/>
                <MenuItem Header="Акции" Click="MenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Выйти" Click="MenuItem_Click"/>
            </MenuItem>

            <MenuItem Header="Общее">
                <MenuItem Header="О нас" Click="MenuItem_Click"/>
                <MenuItem Header="Мы в соцсетях">
                    <MenuItem Header="Группа Вконтакте" Click="MenuItem_Click"/>
                    <MenuItem Header="Инстаграм" Click="MenuItem_Click"/>
                </MenuItem>
                <Separator/>
                <MenuItem Header="Оставить отзыв" Click="MenuItem_Click"/>
                <Separator/>
                <MenuItem Header="Закрыть" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="0,17,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.8*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="7*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <TabControl Name="CategoryTabControl">


                </TabControl>

                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center">
                    <Button Name="CreateOrder" Margin="5" Width="110" Click="Del_Click">Сделать заказ</Button>
                    <Button Name="Add" Margin="5" Width="110" Click="Add_Click">Добавить в заказ</Button>
                    <Button Name="Del" Margin="5" Width="110" Click="Del_Click">Удалить из заказа</Button>
                </StackPanel>

            </Grid>

            <Grid Grid.Column="1" >

                <Grid.RowDefinitions>
                    <RowDefinition Height="8*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <ListView Name="OrderList" MouseDoubleClick="OrderList_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Наименование" DisplayMemberBinding="{Binding Path=name}"></GridViewColumn>
                                <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Path=price}"></GridViewColumn>
                                <GridViewColumn Header="Кол-во" DisplayMemberBinding="{Binding Path=count}"></GridViewColumn>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Label Name="Sum" Grid.Row="2">Сумма заказа:</Label>
            </Grid>
        </Grid>
    </Grid>
</Window>
