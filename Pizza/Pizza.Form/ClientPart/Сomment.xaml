<Window x:Class="Pizza.Form.ClientPart.Сomment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pizza.Form.ClientPart"
        mc:Ignorable="d"
        Title="Ваш отзыв" Height="250" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFFFC3A0"/>
            <GradientStop Color="#FFFFE16E" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <TextBox Margin="15" TextWrapping="Wrap">
        </TextBox>

        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Height="25" Click="Button_Click" Template="{DynamicResource ButtonOwal}" VerticalContentAlignment="Center">Оставить отзыв</Button>
    </Grid>
</Window>
