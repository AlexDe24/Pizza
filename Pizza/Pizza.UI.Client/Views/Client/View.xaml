             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.UI.Client.Views.Client"
             mc:Ignorable="d" xmlns:cal="http://www.caliburnproject.org"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="{Binding Name, StringFormat='{}Имя: {0}'}" />
        <Button Content="Редактировать" cal:Message.Attach="HandleEditClick" />
    </StackPanel>
</UserControl>
