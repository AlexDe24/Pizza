<UserControl x:Class="Pizza.UI.Client.Views.OrderElement.ListItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pizza.UI.Client.Views.OrderElement"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Orientation="Horizontal">
        <TextBlock Text="{Binding Product}" />
        <Button Content="-" cal:Message.Attach="HandleDecreaseQuantity" />
        <TextBlock Text="{Binding Quantity}" />
        <Button Content="+" cal:Message.Attach="HandleIncreaseQuantity" />
    </StackPanel>
    
</UserControl>
